@model Estoque

@{
    ViewData["Title"] = "Cadastro de Estoque";
}

<h4>Estoque</h4>

<form asp-action="Create" id="myform">

    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-12">
            <div class="card mt-2">
                <div class="card-body">
                    <div class="card-title"><h6>Informações Básicas</h6></div>
                    <div class="row">
                        <div class="col-3">
                            <div class="form-group">
                                <label asp-for="Produto" class="control-label">Descrição</label>
                                <select asp-for="Produto" asp-items="@ViewBag.DescricaoProduto" class="form-control form-control-sm">
                                    <option selected="selected" value="0">Selecione</option>
                                </select>
                            </div>
                            <span asp-validation-for="Produto" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <label asp-for="Quantidade" class="control-label">Quantidade</label>
                                <input asp-for="Quantidade" class="form-control form-control-sm" />
                            </div>
                            <span asp-validation-for="Quantidade" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="Reservado" class="control-label">Reservado</label>
                                <input asp-for="Reservado" class="form-control form-control-sm" />
                            </div>
                            <span asp-validation-for="Reservado" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4 mt-3">
            <input type="submit" value="Cadastrar" class="btn btn-outline-success btn-sm w-150" /> |
            <a class="btn btn-outline-secondary btn-sm w-150" asp-action="Index">Voltar</a>
        </div>

    </div>

</form>