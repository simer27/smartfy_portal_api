@model Cliente

@{
    ViewData["Title"] = "Cadastro de Cliente";
}

<h4>Clientes</h4>

<form asp-action="Create" id="myform">

    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-12">
            <div class="card mt-2">
                <div class="card-body">
                    <div class="card-title"><h6>Informações Básicas</h6></div>
                    <div class="row">
                        <div class="col-3">
                            <div class="form-group">
                                <label asp-for="CPF" class="control-label">CPF</label>
                                <input asp-for="CPF" class="form-control form-control-sm" />
                            </div>
                            <span asp-validation-for="CPF" class="text-danger"></span>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label">Nome</label>
                                <input asp-for="Name" class="form-control form-control-sm" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="Address" class="control-label">Endereço</label>
                                <input asp-for="Address" class="form-control form-control-sm" />
                            </div>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>        
        <div class="col-4 mt-3">
            <input type="submit" value="Cadastrar" class="btn btn-outline-success btn-sm w-150" /> |
            <a class="btn btn-outline-secondary btn-sm w-150" asp-action="Index">Voltar</a>
        </div>

    </div>

</form>